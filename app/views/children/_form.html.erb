<%= form_with model: child, url: children_path, method: :patch, local: true do |form| %>
  <%= form.hidden_field :position, value: child.position %>
  <ul class="nav nav-tabs">
    <li class="nav-item">
    </li>
  </ul>
  <div class="form-group">
    <%= form.label :name, "名前" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :age, "年齢" %>
    <%= form.text_field :age, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :academic_year, "学年" %>
    <%= form.text_field :academic_year, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :gender, "性別" %>
    <%= form.text_field :gender, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :truancy_reason, "不登校理由" %>
    <%= form.text_area :truancy_reason, class: "form-control",rows: 7 %>
  </div>
  <div class="form-group">
    <%= form.label :current_status, "現状" %>
    <%= form.text_area :current_status, class: "form-control", rows: 7 %>
  </div>
  <div>
    <%= form.submit "更新",  class: "btn btn-block btn-primary" %>
  </div>
<% end %>
