<h1>ユーザー一覧</h1>
<div class="user-index">
  <% @users.each do |user| %>
    <div class="hover-2">
      <a href="/users/<%= user.id %>" class="card">
        <div>
          <% if user.profile_image? %>
            <div><%= image_tag user.profile_image.url %></div>
          <% end %>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= "名前 : #{user.name}" %></li>
            <li class="list-group-item"><%= "年齢 : #{user.age}" %></li>
            <li class="list-group-item"><%= "出身地 : #{user.place}" %></li>
          </ul>
        </div>
      </a>
    </div>
  <% end %>
</div>
