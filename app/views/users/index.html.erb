<h1>ユーザー一覧</h1>
<div class="user-index">
  <% @users.each do |user| %>
    <div class="hover-2">
      <a href="/users/<%= user.id %>" class="card">
        <svg class="bd-placeholder-img card-img-top" width="100%"  xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= "名前 : #{user.name}" %></li>
            <li class="list-group-item"><%= "年齢 : #{user.age}" %></li>
            <li class="list-group-item"><%= "出身地 : #{user.place}" %></li>
          </ul>
        </div>
      </a>
    </div>
  <% end %>
</div>
