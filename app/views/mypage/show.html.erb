<%= form_with model: current_user, local: true do |form| %>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <div class="form-group">
          <%= form.label :名前 %>
          <%= form.text_field :name, class: "form-control " %>
        </div>
        <div class="form-group">
          <%= form.label :年齢 %>
          <%= form.text_field :age, class: "form-control " %>
        </div>
        <div class="form-group">
          <%= form.label :出身地 %>
          <%= form.text_field :place, class: "form-control " %>
        </div>
      </div>
      <div class="col-4">
        <div class="form-group">
          dsdssdddddddddddddddddddsdfdsfds
          <%= form.label :profile_image %>
          <%= form.text_field :profile_image, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :経歴 %>
      <%= form.text_field :career, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :インスタ %>
      <%= form.text_field :insta_id, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :なぜ入会しようと思ったか %>
      <%= form.text_area :using_reason, class: "form-control", rows: 7 %>
    </div>
    <div class="form-group">
      <%= form.label :今後どうしていきたいか %>
      <%= form.text_area :content, class: "form-control", rows: 7 %>
    </div>
  <% end %>
